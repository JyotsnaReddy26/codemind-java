import java.util.Scanner;
public class Convert
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n;
        n=sc.nextInt();
        int h,m,s;
        h=n/3600;
        m=(n%3600)/60;
        s=n%60;
        System.out.println("H:M:S-"+h+":"+m+":"+s);
    }
}
