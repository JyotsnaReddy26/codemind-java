import java.util.Scanner;
class Slope
{
public static void main(String args[])
{
 Scanner sc=new Scanner(System.in);
     Double x1,x2,y1,y2;
      Double Slope;
        x1=sc.nextDouble();
        x2=sc.nextDouble();
         y1=sc.nextDouble();
         y2=sc.nextDouble();
        Slope=(float)(y2-y1)/(x2-x1);
System.out.println("Slope required is:"+Slope);
System.out.printf("Slope required is : %.2f",Slope);
}
}
